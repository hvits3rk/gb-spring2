<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <view-state id="enterNewsPostDetails">
        <transition on="submit" to="reviewNewsPost" />
    </view-state>

    <view-state id="reviewNewsPost">
        <transition on="confirm" to="newsPostConfirmed" />
        <transition on="revise" to="enterNewsPostDetails" />
        <transition on="cancel" to="newsPostCancelled" />
    </view-state>

    <end-state id="newsPostConfirmed" />

    <end-state id="newsPostCancelled" />

</flow>